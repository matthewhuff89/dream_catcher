<div class = "login_container">
<h3>Sign in with your account!</h3>
  <form class="login" action="/users/login" method="POST">
    Username:<br>
    <input type="text" name="user[username]"><br>
    Password:<br>
    <input type="password" name="user[password]"><br>
    <input class="login_submit" type="submit" value="Login!">
  </form>


<h3>Don't have an account? Sign up right here!</h3>
  <form class="signup" action="/users/signup" method="POST">
    Username:<br>
    <input type="text" name="user[username]"><br>
    Email Address:<br>
    <input type="text" name="user[email]"><br>
    Password:<br>
    <input type="password" name="user[password]"><br>
    Confirm Password:<br>
    <input type="password" name="user[password_confirmation]"><br>
    <input type="submit" value="Create Account!">
  </form>
</div>
